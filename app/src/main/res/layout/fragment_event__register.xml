<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Event_Register">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <android.support.v7.widget.Toolbar
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="#ffa726">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/event_register_title"
                            android:textColor="#ffffff"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            />

                    </android.support.v7.widget.Toolbar>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.12"
                        android:background="@android:color/black">
                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp">

                        <TextView
                            android:layout_width="152dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="Type of Event"
                            android:textSize="16sp" />

                        <Spinner
                            android:layout_width="152dp"
                            android:layout_height="40dp"
                            android:id="@+id/spinner1">

                        </Spinner>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.12"
                        android:background="@android:color/black">
                    </View>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp">

                        <TextView
                            android:layout_width="152dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="Select event"

                            android:textSize="16sp" />

                        <Spinner
                            android:layout_width="152dp"
                            android:layout_height="40dp"
                            android:id="@+id/spinner2"/>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.12"
                        android:background="@android:color/black">
                    </View>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp">

                        <TextView
                            android:layout_width="152dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="Select batch"

                            android:textSize="16sp" />

                        <Spinner
                            android:layout_width="152dp"
                            android:layout_height="40dp"
                            android:id="@+id/spinner3"></Spinner>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.12"
                        android:background="@android:color/black">
                    </View>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp">

                        <TextView
                            android:layout_width="152dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="Select student"
                            android:textSize="16sp" />

                        <Spinner
                            android:layout_width="152dp"
                            android:layout_height="40dp"
                            android:id="@+id/spinner4"></Spinner>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.12"
                        android:background="@android:color/black">
                    </View>


                    <LinearLayout
                        android:id="@+id/belt_linear_layout"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="152dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="Belt Level"

                            android:textSize="16sp" />

                        <Spinner
                            android:layout_width="152dp"
                            android:layout_height="40dp"
                            android:id="@+id/spinner5"></Spinner>


                    </LinearLayout>




                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.12"
                        android:background="@android:color/black">
                    </View>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp">

                        <TextView
                            android:layout_width="152dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="Registration fees"

                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/reg_fees"
                            android:layout_width="152dp"
                            android:layout_height="40dp"
                            android:background="@null"
                            android:inputType="number"
                            android:hint="Registration fees" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.12"
                        android:background="@android:color/black">
                    </View>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center_vertical"
                        >

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/add"
                            android:backgroundTint="#ffa726"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:id="@+id/add_button"/>

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>

</FrameLayout>