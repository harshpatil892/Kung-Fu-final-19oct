            card_view:cardBackgroundColor="#fff"
            card_view:cardCornerRadius="05dp"
            card_view:cardElevation="10dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.515"
